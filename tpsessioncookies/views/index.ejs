<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <link rel='stylesheet' href='/stylesheets/style.css'/>
    <!-- link boostrap -->
    <!-- CSS only -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
  </head>
  <body>
    <h1><%= title %></h1>
    <p>Welcome to <%= title %></p>
    <main class="forms__mainContainer">
      <form action="/" method="post">
          <div class="form--group mb-3 col-md-6">
              <label for="name">Ingrese su nombre</label>
              <input type="text" name="name" id="name">
              <% if (locals.errors && errors.name) { %>
                <small class="text-danger"><%= errors.name.msg %> </small>
              <% } %>
          </div>
          <div class="form--group mb-3 col-md-6">
          <select name="color">
            <option selected>Elija el color que mas le guste</option>
            <option value="1">Amarillo</option>
            <option value="2">Violeta</option>
            <option value="3">Azul</option>
          </select>
          <% if (locals.errors && errors.color) { %>
            <small class="text-danger"><%= errors.color.msg %> </small>
          <% } %>
        </div>
          <div class="form--group mb-3 col-md-6">
              <label for="email">Ingrese Email</label>
              <input type="email" name="email" id="email">
              <% if (locals.errors && errors.email) { %>
                <small class="text-danger"><%= errors.email.msg %> </small>
              <% } %>
          </div>
          <div class="form--group mb-3 col-md-6">
              <label for="edad">Ingrese su edad</label>
              <input type="number" name="edad" id="edad">
              <% if (locals.errors && errors.edad) { %>
                <small class="text-danger"><%= errors.edad.msg %> </small>               
              <% } %>
          </div>
          <div class="form-check mb-3">
            <input class="form-check-input" name="remember" type="checkbox" value="" id="remember">
            <label class="form-check-label" for="remember">
                Recordarme
            </label>
        </div>
          <div class="form__buttons--container">
              <button class="btn btn-outline-success" type="reset">Limpiar</button>
              <button class="btn btn-outline-primary" type="submit">Registrarme</button>
          </div>
      </form>
  </main>
  <!-- JavaScript Bundle with Popper -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
  </body>
</html>
